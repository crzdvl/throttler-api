{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"],
  },
  "include": [
    "src/*", "__test__/index.spec.ts"
  ],
  "exclude" : [
    "src/*.spec.ts"
  ]
}